generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quiz {
  id          String        @id @default(cuid())
  nome        String
  description String
  Pontuacacao Pontuacacao[]
  perguntas   Pergunta[]
}

model Pergunta {
  id               String             @id @default(cuid())
  titulo           String
  quizId           String?
  description      String
  Pergunta_Respota Pergunta_Respota[]
  Quiz             Quiz?              @relation(fields: [quizId], references: [id])
}

model Pergunta_Respota {
  id         String   @id @unique @default(cuid())
  resultado  Boolean
  perguntaId String
  respostaId String
  pergunta   Pergunta @relation(fields: [perguntaId], references: [id])
  resposta   Resposta @relation(fields: [respostaId], references: [id])
}

model Resposta {
  id               String             @id @default(cuid())
  descricao        String
  Pergunta_Respota Pergunta_Respota[]
}

model Usuario {
  id         String        @id @default(cuid())
  nome       String
  email      String?
  senha      String?
  meusPontos Pontuacacao[]
  tipo       Boolean
}

model Pontuacacao {
  id        String   @id @default(cuid())
  pontuacao Int
  usuarioId String?
  quizId    String?
  Usuario   Usuario? @relation(fields: [usuarioId], references: [id])
  Quiz      Quiz?    @relation(fields: [quizId], references: [id])
}
