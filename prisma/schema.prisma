// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../dist/database/prisma/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quiz {
  id          String        @id @default(cuid())
  nome        String
  perguntas   Pergunta[]
  Pontuacacao Pontuacacao[]
}

model Pergunta {
  id               String             @id @default(cuid())
  titulo           String
  quizId           String?
  Quiz             Quiz?              @relation(fields: [quizId], references: [id])
  Pergunta_Respota Pergunta_Respota[]
}

model Pergunta_Respota {
  id         String   @id @default(cuid())
  pergunta   Pergunta @relation(fields: [perguntaId], references: [id])
  resposta   Resposta @relation(fields: [respostaId], references: [id])
  resultado  Boolean
  perguntaId String
  respostaId String
}

model Resposta {
  id               String             @id @default(cuid())
  descricao        String
  Pergunta_Respota Pergunta_Respota[]
}

model Usuario {
  id         String        @id @default(cuid())
  nome       String
  meusPontos Pontuacacao[]
  tipo       Boolean
}

model Pontuacacao {
  id        String   @id @default(cuid())
  pontuacao Int
  usuarioId String?
  quizId    String?
  Usuario   Usuario? @relation(fields: [usuarioId], references: [id])
  Quiz      Quiz?    @relation(fields: [quizId], references: [id])
}
